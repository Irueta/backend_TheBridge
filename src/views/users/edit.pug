extends ../layout

block content 
    h1 Editar Usuario
    if error 
        h2= error
    form(action=`/users/${user.id}`, method="post")
        label(for="nombre") Nombre:
        input(type="text", name="nombre", id="nombre" value=user.nombre)  
        label(for="primer_apellido") Primer apellido:
        input(type="text", name="primer_apellido", id="primer_apellido", value=user.primer_apellido )
        label(for="segundo_apellido") Segundo apellido:
        input(type="text", name="segundo_apellido", id="segundo_apellido", value=user.segundo_apellido )
        label(for="email") Email:
        input(type="email", name="email", id="email", value=user.email )
        input(type="submit", value="guardar")